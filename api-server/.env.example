# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=video_platform
DB_USER=video_user
DB_PASSWORD=video_password

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=524288000
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,wmv,flv,webm
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# CORS 配置
CORS_ORIGIN=*

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@videoplatform.com

# 视频处理配置
FFMPEG_PATH=/usr/bin/ffmpeg
VIDEO_QUALITY=720p
VIDEO_BITRATE=2000k
AUDIO_BITRATE=128k

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=video_platform:

# 安全配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# 功能开关
REGISTRATION_ENABLED=true
COMMENT_ENABLED=true
LIKE_ENABLED=true
VIDEO_PROCESSING_ENABLED=true
THUMBNAIL_GENERATION_ENABLED=true

# 第三方服务（可选）
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# 监控配置（可选）
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# 开发配置
DEBUG=video-platform:*
NODEMON_IGNORE=uploads/,logs/,node_modules/